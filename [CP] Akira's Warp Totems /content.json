{
  "Format": "2.0.0",
  "ConfigSchema":
  {
    "Warp Totems":
    {
      "AllowValues": "true, false",
      "Default": "true",
      "Description": "Replaces Warp Totems with consumable spells in bags."
    },
    "Rain Totem":
    {
      "AllowValues": "true, false",
      "Default": "true",
      "Description": "Replaces the Rain Totem with a consumable spell in a bag."
    },
    "Treasure Totem":
    {
      "AllowValues": "true, false",
      "Default": "true",
      "Description": "Replaces the Treasure Totem with a consumable spell in a bag."
    }
  },
  "Changes": [
    {
      "LogName": "Warp Totem Changes",
      "Action": "Include",
      "FromFile": "assets/WarpTotems.json",
      "When": {
        "Warp Totems": true
      }
    },

    {
      "LogName": "Rain Totem Changes",
      "Action": "Include",
      "FromFile": "assets/RainTotem.json",
      "When": {
        "Rain Totem": true
      }
    },

    // Treasure Totem
    {
      "LogName": "Treasure Totem Changes",
      "Action": "Include",
      "FromFile": "assets/TreasureTotem.json",
      "When": {
        "Treasure Totem": true
      }
    },
  ]
}