{

	/*
					THIS IS THE FILE THAT MAKES THE MOD WORK. IT IS NOT FOR CHANGING YOUR OPTIONS IN THE MOD. IF YOU WANT TO CHANGE OPTIONS, USE THE CONFIG.JSON. DO NOT EDIT THIS FILE UNLESS YOU KNOW WHAT YOU ARE DOING!
					
	*/

  "Format": "2.0.0",
  
  "ConfigSchema": {
    "Horse Skin": {
		  "AllowValues": "Andalusian, AppaloosaBlonde, AppaloosaFawn, AppaloosaBrown, AppaloosaRed, AppaloosaMidnight, AppaloosaBlack, AppaloosaGrey, AppaloosaSilver, Azteca, BlackForest, BlackShire, Blue, Buckskin, Chestnut, ClevelandBay, Clydesdale, Cremello, Epona, Fjord, Fresian, Green, Holsteiner, HolsteinerSilver, Kathiawari, Lipizzan, Marwari, Orange, PaleDun, Palomino, Percheron, Pink, PintoBlonde, PintoFawn, PintoBrown, PintoRed, PintoMidnight, PintoBlack, PintoGrey, PintoSilver, Purple, Red, RedShire, RoanBay, RoanBlue, RoanStrawberry, Shadowmere, SilverRockyMt, SolidCream, SolidBlonde, SolidFawn, SolidBrown, SolidRed, SolidMidnight, SolidBlack, SolidGrey, SolidSilver, SolidWhite, Sorrel, SpeckledBlonde, SpeckledFawn, SpeckledBrown, SpeckledRed, SpeckledMidnight, SpeckledBlack, SpeckledGrey, SpeckledSilver, Teal, Thoroughbred, Turquoise, Vanilla, WhiteShire, Yellow, VoidAppaloosa, VoidBay, VoidPinto, VoidShire, VoidSolid, VoidSpeckled",
		  "AllowMultiple": false,
		  "AllowBlank": false,
		  "Default": "PintoSilver",
		  "Description": "This is the skin any horses on your farm will use. List only one, leave blank or write false to disable"},
	
	"Prismatic Hair": {
		  "AllowValues": "true, false",
		  "AllowMultiple": false,
		  "AllowBlank": true,
		  "Default": "false",
		  "Description": "Adds a prismatic/rainbow hair overlay to your horse skin."},
	
	"Saddle Color": {
		  "AllowValues": "Cream, Blonde, Fawn, Brown, Red, Midnight, Black, Grey, Silver, White, Vanilla, BrightRed, Orange, Yellow, Green, Teal, Turquoise, Blue, LightBlue, Purple, LightPurple, Pink, LightPink, false",
		  "AllowMultiple": false,
		  "AllowBlank": true,
		  "Default": "false",
		  "Description": "This is the color saddle that will be on your horse. List only one, leave blank or write false to disable"},
	
	"Menu Icon": {
		  "AllowValues": "true, false",
		  "AllowMultiple": false,
		  "AllowBlank": true,
		  "Default": "true",
		  "Description": "This will change the horse head icon in the menu to match your horse skin. List only one, leave blank or write false to disable"},
	
	"Horse Flute Recolor": {
		  "AllowValues": "true, false",
		  "AllowMultiple": false,
		  "AllowBlank": true,
		  "Default": "true",
		  "Description": "This will change the horse flute item to match your horse skin. List only one, leave blank or write false to disable"},
	},
	
  "Changes": [
    // Horse
	{
      "LogName": "Horse Skin",
      "Action": "Load",
	  "Target": "Animals/Horse",
	  "FromFile": "assets/Horse/{{Horse Skin}}.png",
    },
    {
      "LogName": "Prismatic Hair Horse Overlay",
      "Action": "EditImage",
	  "Target": "Animals/Horse",
	  "FromFile": "assets/Horse/PrismaticOverlay.png",
	  "PatchMode": "Overlay",
	  "When": { "Prismatic Hair": "true"},
    },
	   
	// Saddle
    {
      "LogName": "Saddle Overlay",
      "Action": "EditImage",
      "Target": "Animals/Horse",
      "FromFile": "assets/Saddles/Saddle_{{Saddle Color}}.png",
	  "PatchMode": "Overlay",
	  "When": { "Saddle Color": "Cream, Blonde, Fawn, Brown, Red, Midnight, Black, Grey, Silver, White, Vanilla, BrightRed, Orange, Yellow, Green, Teal, Turquoise, Blue, LightBlue, Purple, LightPurple, Pink, LightPink"},
    },
	   
	// Horse Head
    {
      "LogName": "Horse Menu Icon",
      "Action": "EditImage",
	  "Target": "LooseSprites/Cursors",
	  "FromFile": "assets/Horse/{{Horse Skin}}.png",
	  "FromArea": { "X": 208, "Y": 112, "Width": 16, "Height": 16 },
	  "ToArea": { "X": 192, "Y": 192, "Width": 16, "Height": 16 },
	  "When": { "Menu Icon": "true"},
    },
	   
	// Flute Recolor
    {
      "LogName": "Horse Flute Recolor",
      "Action": "EditImage",
	  "Target": "Maps/springobjects",
	  "FromFile": "assets/Items/Flute_{{Horse Skin}}.png",
	  "FromArea": { "X": 0, "Y": 0, "Width": 16, "Height": 16 }, 
	  "ToArea": { "X": 368, "Y": 592, "Width": 16, "Height": 16 },
	  "PatchMode": "Replace",
	  "When": { "Horse Flute Recolor": "true"},
    },
    {
      "LogName": "Prismatic Hair Flute Overlay",
      "Action": "EditImage",
	  "Target": "Maps/springobjects",
	  "FromFile": "assets/Items/Flute_PrismaticOverlay.png",
	  "FromArea": { "X": 0, "Y": 0, "Width": 16, "Height": 16 },
	  "ToArea": { "X": 368, "Y": 592, "Width": 16, "Height": 16 },
	  "PatchMode": "Overlay",
	  "When": { "Horse Flute Recolor": "true",
				"Prismatic Hair": "true"},
    },
]
}