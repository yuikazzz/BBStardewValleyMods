				}
			},
			"When": {
				"Spiderbuttons.ButtonsExtraBooksCore/ConfigEnableSketchbook": true
			},
		},

		{
			"Action": "EditData",
			"Target": "Data/Locations",
			"TargetField": [ "Default", "ArtifactSpots", "{{ModId}}_SketchbookDrops", "RandomItemId" ],
